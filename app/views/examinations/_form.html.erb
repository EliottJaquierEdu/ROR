<%= form_with(model: examination) do |form| %>
  <% if examination.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(examination.errors.count, "error") %> prohibited this examination from being saved:</h2>

      <ul>
        <% examination.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :expected_date, style: "display: block" %>
    <%= form.datetime_field :expected_date %>
  </div>

  <div>
    <%= form.label :course_id, style: "display: block" %>
    <%= form.collection_select :course_id, Course.includes(:subject).all, :id, ->(course) { "#{course.subject.name} - Term #{course.term}" } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
