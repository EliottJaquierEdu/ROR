<p style="color: green"><%= notice %></p>

<% content_for :title, "Examinations" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Examinations</h1>
  <%= link_to new_examination_path, class: "btn btn-primary" do %>
    <i class="bi bi-plus-circle"></i> New examination
  <% end %>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead class="table-light">
          <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Course</th>
            <th>Subject</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @examinations.each do |examination| %>
            <tr>
              <td><%= examination.title %></td>
              <td><%= examination.expected_date&.strftime("%d %b %Y") %></td>
              <td>
                <% if examination.course %>
                  <%= link_to "Term #{examination.course.term}", examination.course %>
                <% end %>
              </td>
              <td>
                <% if examination.course&.subject %>
                  <%= link_to examination.course.subject.name, examination.course.subject %>
                <% end %>
              </td>
              <td>
                <div class="btn-group btn-group-sm">
                  <%= link_to examination, class: "btn btn-outline-primary" do %>
                    <i class="bi bi-eye"></i> View
                  <% end %>
                  <%= link_to edit_examination_path(examination), class: "btn btn-outline-secondary" do %>
                    <i class="bi bi-pencil"></i> Edit
                  <% end %>
                  <%= button_to examination, method: :delete, 
                      class: "btn btn-outline-danger", 
                      form: { data: { turbo_confirm: "Are you sure?" } } do %>
                    <i class="bi bi-trash"></i> Delete
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
