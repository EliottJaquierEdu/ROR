<%= form_with(model: person, scope: :person, class: "needs-validation") do |form| %>
  <% if person.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h5>
      <ul class="mb-0">
        <% person.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
      <h5 class="card-title mb-0">Personal Information</h5>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <div class="form-floating mb-3">
            <%= form.text_field :username, class: "form-control", placeholder: "Username" %>
            <%= form.label :username %>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="form-floating mb-3">
            <%= form.email_field :email, class: "form-control", placeholder: "Email" %>
            <%= form.label :email %>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="form-floating mb-3">
            <%= form.text_field :firstname, class: "form-control", placeholder: "First name" %>
            <%= form.label :firstname %>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="form-floating mb-3">
            <%= form.text_field :lastname, class: "form-control", placeholder: "Last name" %>
            <%= form.label :lastname %>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="form-floating mb-3">
            <%= form.telephone_field :phone_number, class: "form-control", placeholder: "Phone number" %>
            <%= form.label :phone_number %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% if person.type == "Teacher" %>
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-light">
        <h5 class="card-title mb-0">Teacher Information</h5>
      </div>
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-6">
            <div class="form-floating mb-3">
              <%= form.text_field :iban, class: "form-control", placeholder: "IBAN" %>
              <%= form.label :iban %>
            </div>
          </div>
          
          <div class="col-md-6">
            <div class="form-floating mb-3">
              <%= form.collection_select :teacher_status_id, TeacherStatus.all, :id, :status, {}, { class: "form-select" } %>
              <%= form.label :teacher_status_id, "Teacher Status" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% if person.type == "Student" %>
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-light">
        <h5 class="card-title mb-0">Student Information</h5>
      </div>
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-6">
            <div class="form-floating mb-3">
              <%= form.collection_select :student_status_id, StudentStatus.all, :id, :status, {}, { class: "form-select" } %>
              <%= form.label :student_status_id, "Student Status" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%= render 'address_form', form: form %>

  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", person.persisted? ? person : people_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>

<script>
function handleTypeChange(type) {
  const studentFields = document.getElementById('student_status_field');
  const teacherFields = document.getElementById('teacher_fields');

  studentFields.style.display = type === 'Student' ? 'block' : 'none';
  teacherFields.style.display = type === 'Teacher' ? 'block' : 'none';
}

// Call on page load to set initial state
document.addEventListener('DOMContentLoaded', function() {
  const typeSelect = document.querySelector('select[name="person[type]"]');
  if (typeSelect) {
    handleTypeChange(typeSelect.value);
  }
});
</script>
