<%= form_with(model: person) do |form| %>
  <% if person.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
        <% person.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :lastname, style: "display: block" %>
    <%= form.text_field :lastname %>
  </div>

  <div>
    <%= form.label :firstname, style: "display: block" %>
    <%= form.text_field :firstname %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :phone_number, style: "display: block" %>
    <%= form.text_field :phone_number %>
  </div>

  <fieldset>
    <legend>Address Information</legend>
    <%= form.fields_for :address do |address_form| %>
      <div>
        <%= address_form.label :street, style: "display: block" %>
        <%= address_form.text_field :street %>
      </div>

      <div>
        <%= address_form.label :number, style: "display: block" %>
        <%= address_form.text_field :number %>
      </div>

      <div>
        <%= address_form.label :zip, style: "display: block" %>
        <%= address_form.number_field :zip %>
      </div>

      <div>
        <%= address_form.label :town, style: "display: block" %>
        <%= address_form.text_field :town %>
      </div>
    <% end %>
  </fieldset>

  <div>
    <%= form.label :type, style: "display: block" %>
    <%= form.select :type, [['Simple Person', 'Person'], ['Student', 'Student'], ['Teacher', 'Teacher']], {}, style: "display: block" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
