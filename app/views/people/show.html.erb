<% content_for :title, "Person Details" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Person Details</h1>
  <div class="btn-group">
    <% if can_edit_person?(@person) %>
      <%= link_to edit_person_path(@person), class: "btn btn-outline-primary" do %>
        <i class="bi bi-pencil"></i> Edit
      <% end %>
    <% end %>
    
    <%= link_to people_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left"></i> Back
    <% end %>
    
    <% if can_delete_person?(@person) %>
      <%= button_to @person, method: :delete, 
          class: "btn btn-outline-danger", 
          form: { data: { turbo_confirm: "Are you sure you want to delete this person?" } } do %>
        <i class="bi bi-trash"></i> Delete
      <% end %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-light">
        <h5 class="card-title mb-0">Personal Information</h5>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <h6 class="text-muted mb-2">Name</h6>
          <h5 class="mb-1"><%= @person.full_name %></h5>
          <p class="text-muted mb-0"><%= @person.email %></p>
        </div>
        
        <div class="mb-3">
          <h6 class="text-muted mb-2">Role</h6>
          <span class="badge bg-primary"><%= @person.type %></span>
        </div>
      </div>
    </div>
  </div>
  
  <% if can_view_address?(@person) && @person.address %>
    <div class="col-md-6">
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Address</h5>
            <% if can_edit_address?(@person) %>
              <%= link_to edit_person_path(@person), class: "btn btn-sm btn-outline-primary" do %>
                <i class="bi bi-pencil"></i> Edit
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <h6 class="text-muted mb-2">Street</h6>
            <p class="mb-1"><%= @person.address.street %></p>
            <p class="mb-0"><%= @person.address.number %></p>
          </div>
          
          <div class="mb-3">
            <h6 class="text-muted mb-2">Location</h6>
            <p class="mb-1"><%= @person.address.zip %></p>
            <p class="mb-0"><%= @person.address.town %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @person.student? %>
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
      <h5 class="card-title mb-0">Classes</h5>
    </div>
    <div class="card-body">
      <% if @person.school_classes.loaded? && @person.school_classes.any? %>
        <div class="list-group list-group-flush">
          <% @person.school_classes.each do |school_class| %>
            <%= link_to school_class_path(school_class), class: "list-group-item list-group-item-action" do %>
              <div class="d-flex w-100 justify-content-between">
                <h6 class="mb-1"><%= "#{school_class.year}-#{school_class.name}" %></h6>
                <% if school_class.master %>
                  <small class="text-muted">Master: <%= school_class.master.full_name %></small>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted mb-0">No classes assigned.</p>
      <% end %>
    </div>
  </div>

  <%= render 'grade_report', student: @person %>
<% end %>

<% if @person.teacher? %>
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
      <h5 class="card-title mb-0">Classes</h5>
    </div>
    <div class="card-body">
      <% if @person.school_classes.loaded? && @person.school_classes.any? %>
        <div class="list-group list-group-flush">
          <% @person.school_classes.each do |school_class| %>
            <%= link_to school_class_path(school_class), class: "list-group-item list-group-item-action" do %>
              <div class="d-flex w-100 justify-content-between">
                <h6 class="mb-1"><%= "#{school_class.year}-#{school_class.name}" %></h6>
                <small class="text-muted"><%= school_class.students.size %> students</small>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted mb-0">No classes assigned.</p>
      <% end %>
    </div>
  </div>

  <% # Set selected week (default to current week) %>
  <% selected_week = params[:week] ? Date.parse(params[:week]) : Date.current.beginning_of_week %>
  
  <%= render 'shared/weekly_schedule', 
           courses: @person.subjects.flat_map { |s| s.courses.select { |c| c.teacher_id == @person.id } },
           class_name: "#{@person.full_name}'s Schedule",
           selected_week: @selected_week %>
  
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
      <h5 class="card-title mb-0">Subjects Taught</h5>
    </div>
    <div class="card-body">
      <% if @person.subjects.loaded? && @person.subjects.any? %>
        <ul class="list-unstyled mb-0">
          <% @person.subjects.each do |subject| %>
            <li class="mb-2">
              <strong><%= subject.name %></strong>
              <ul class="small text-muted">
                <% subject.courses.select { |c| c.teacher_id == @person.id }.each do |course| %>
                  <li>
                    <%= "#{course.school_class.year}-#{course.school_class.name}" %>
                    (<%= course.start_at.strftime("%H:%M") %> - <%= course.end_at.strftime("%H:%M") %>)
                  </li>
                <% end %>
              </ul>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted mb-0">No subjects assigned</p>
      <% end %>
    </div>
  </div>

  <%= render 'shared/weekly_schedule', 
           courses: @person.subjects.flat_map { |s| s.courses.select { |c| c.teacher_id == @person.id } },
           class_name: "#{@person.full_name}'s Schedule",
           selected_week: @selected_week %>
<% end %>
