<div class="card shadow-sm mb-4">
  <div class="card-header bg-light">
    <h5 class="card-title mb-0">Address Information</h5>
  </div>
  <div class="card-body">
    <%= form.fields_for :address do |address_form| %>
      <div class="row g-3">
        <div class="col-md-8">
          <div class="form-floating mb-3">
            <%= address_form.text_field :street, class: "form-control", placeholder: "Street" %>
            <%= address_form.label :street %>
          </div>
        </div>
        
        <div class="col-md-4">
          <div class="form-floating mb-3">
            <%= address_form.text_field :number, class: "form-control", placeholder: "Number" %>
            <%= address_form.label :number %>
          </div>
        </div>
        
        <div class="col-md-4">
          <div class="form-floating mb-3">
            <%= address_form.number_field :zip, class: "form-control", placeholder: "ZIP Code" %>
            <%= address_form.label :zip, "ZIP Code" %>
          </div>
        </div>
        
        <div class="col-md-8">
          <div class="form-floating mb-3">
            <%= address_form.text_field :town, class: "form-control", placeholder: "Town" %>
            <%= address_form.label :town %>
          </div>
        </div>
      </div>
    <% end %>
    
    <div class="mt-3">
      <% if person.address %>
        <div class="btn-group">
          <%= link_to edit_address_path(person.address), class: "btn btn-outline-secondary btn-sm" do %>
            <i class="bi bi-pencil"></i> Edit address
          <% end %>
          <%= link_to address_path(person.address),
              data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this address?" },
              class: "btn btn-outline-danger btn-sm" do %>
            <i class="bi bi-trash"></i> Delete address
          <% end %>
        </div>
      <% else %>
        <%= link_to new_address_path(person_id: person.id), class: "btn btn-outline-primary btn-sm" do %>
          <i class="bi bi-plus-circle"></i> Add new address
        <% end %>
      <% end %>
    </div>
  </div>
</div>
