<% content_for :title, "Editing #{@person.firstname} #{@person.lastname}" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Editing <%= @person.firstname %> <%= @person.lastname %></h1>
  <div class="btn-group">
    <%= link_to "Show", @person, class: "btn btn-outline-primary" %>
    <%= link_to "Back", people_path, class: "btn btn-outline-secondary" %>
  </div>
</div>

<div class="card shadow-sm mb-4">
  <div class="card-body">
    <%= render "form", person: @person %>
  </div>
</div>
