<%# Grade Report Component %>
<div class="card shadow-sm mb-4">
  <div class="card-header bg-light">
    <div class="d-flex justify-content-between align-items-center">
      <h5 class="card-title mb-0">Grade Report</h5>
      <% if student.school_classes.any? %>
        <div class="d-flex align-items-center">
          <label class="me-2 text-muted">Class:</label>
          <%= select_tag :selected_class,
              options_from_collection_for_select(
                student.school_classes.order(year: :desc),
                :id,
                ->(sc) { "#{sc.year}-#{sc.name}" },
                params[:selected_class]
              ),
              include_blank: "All Classes",
              class: "form-select form-select-sm",
              style: "width: auto;",
              data: { 
                controller: "autosubmit",
                action: "change->autosubmit#submit"
              }
          %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="card-body">
    <% if student.grades.any? %>
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead class="table-light">
            <tr>
              <th>Term</th>
              <th>Subject</th>
              <th>Examination</th>
              <th>Grade</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% student.sorted_terms(params[:selected_class]).each do |term| %>
              <% term_grades = student.grades_by_term(params[:selected_class])[term] %>
              <% grades_by_subject = group_term_grades_by_subject(term_grades) %>
              
              <% grades_by_subject.each do |subject, subject_grades| %>
                <% subject_grades.each do |grade| %>
                  <tr>
                    <td><%= term %></td>
                    <td><%= link_to subject.name, subject %></td>
                    <td>
                      <% if grade.examination %>
                        <%= link_to grade.examination.title, grade.examination %>
                      <% end %>
                    </td>
                    <td>
                      <span class="badge <%= grade_status_class(grade.value) %>">
                        <%= format_grade(grade.value) %>
                      </span>
                    </td>
                    <td><%= grade.effective_date&.strftime("%d %b %Y") %></td>
                  </tr>
                <% end %>
                
                <%# Subject average row %>
                <tr class="table-light">
                  <td colspan="3" class="text-end"><strong>Subject Average:</strong></td>
                  <td colspan="2">
                    <% average_grade = calculate_average_grade(subject_grades) %>
                    <span class="badge <%= grade_status_class(average_grade) %>">
                      <%= format_grade(average_grade) %>
                    </span>
                  </td>
                </tr>
              <% end %>
              
              <%# Term average row %>
              <tr class="table-secondary">
                <td colspan="3" class="text-end"><strong>Term Average:</strong></td>
                <td colspan="2">
                  <% term_average = student.term_average(term, params[:selected_class]) %>
                  <span class="badge <%= grade_status_class(term_average) %>">
                    <%= format_grade(term_average) %>
                  </span>
                </td>
              </tr>
              
              <%# Spacer row between terms %>
              <tr class="table-divider"><td colspan="5"></td></tr>
            <% end %>
          </tbody>
        </table>
        
        <%# Overall Summary Section %>
        <div class="mt-4 p-3 bg-light rounded border">
          <h6 class="mb-3 text-primary">Academic Performance Summary</h6>
          <div class="row g-3">
            <div class="col-md-4">
              <div class="card h-100 border-0 bg-white shadow-sm">
                <div class="card-body">
                  <h6 class="card-subtitle mb-2 text-muted">Overall Performance</h6>
                  <div class="d-flex align-items-center">
                    <span class="h4 mb-0 me-2">
                      <span class="badge <%= grade_status_class(student.overall_average(params[:selected_class])) %>">
                        <%= format_grade(student.overall_average(params[:selected_class])) %>
                      </span>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <p class="text-muted mb-0">No grades recorded yet.</p>
    <% end %>
  </div>
</div> 