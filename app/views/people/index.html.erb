<p style="color: green"><%= notice %></p>

<% content_for :title, "People" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>People</h1>
  <% if can_create_person? %>
    <%= link_to new_person_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-circle"></i> New person
    <% end %>
  <% end %>
</div>

<div class="card shadow-sm mb-4">
  <div class="card-body">
    <div class="d-flex gap-2">
      <%= link_to "All", people_path, class: "btn #{params[:type].blank? ? 'btn-primary' : 'btn-outline-primary'}" %>
      <%= link_to "Students", people_path(type: "Student"), class: "btn #{params[:type] == 'Student' ? 'btn-primary' : 'btn-outline-primary'}" %>
      <%= link_to "Teachers", people_path(type: "Teacher"), class: "btn #{params[:type] == 'Teacher' ? 'btn-primary' : 'btn-outline-primary'}" %>
      <%= link_to "Deans", people_path(type: "Dean"), class: "btn #{params[:type] == 'Dean' ? 'btn-primary' : 'btn-outline-primary'}" %>
    </div>
  </div>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead class="table-light">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Type</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @people.each do |person| %>
            <tr>
              <td><%= person.full_name %></td>
              <td><%= person.email %></td>
              <td><%= person.type %></td>
              <td>
                <%= render 'shared/table_actions', resource: person, resource_name: 'person' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
