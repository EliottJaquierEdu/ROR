<p style="color: green"><%= notice %></p>

<% content_for :title, "People" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>People</h1>
  <% if can_create_person? %>
    <%= link_to new_person_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-circle"></i> New person
    <% end %>
  <% end %>
</div>

<div class="card shadow-sm mb-4">
  <div class="card-body">
    <div class="d-flex gap-2">
      <%= link_to "All", people_path, class: "btn #{params[:type].blank? ? 'btn-primary' : 'btn-outline-primary'}" %>
      <%= link_to "Students", people_path(type: "Student"), class: "btn #{params[:type] == 'Student' ? 'btn-primary' : 'btn-outline-primary'}" %>
      <%= link_to "Teachers", people_path(type: "Teacher"), class: "btn #{params[:type] == 'Teacher' ? 'btn-primary' : 'btn-outline-primary'}" %>
      <%= link_to "Deans", people_path(type: "Dean"), class: "btn #{params[:type] == 'Dean' ? 'btn-primary' : 'btn-outline-primary'}" %>
    </div>
  </div>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead class="table-light">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Type</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @people.each do |person| %>
            <tr>
              <td><%= person.full_name %></td>
              <td><%= person.email %></td>
              <td><%= person.type %></td>
              <td>
                <div class="btn-group btn-group-sm">
                  <% if can_view_person?(person) %>
                    <%= link_to person, class: "btn btn-outline-primary" do %>
                      <i class="bi bi-eye"></i> View
                    <% end %>
                  <% end %>
                  
                  <% if can_edit_person?(person) %>
                    <%= link_to edit_person_path(person), class: "btn btn-outline-secondary" do %>
                      <i class="bi bi-pencil"></i> Edit
                    <% end %>
                  <% end %>
                  
                  <% if can_delete_person?(person) %>
                    <%= button_to person, method: :delete, 
                        class: "btn btn-outline-danger", 
                        form: { data: { turbo_confirm: "Are you sure?" } } do %>
                      <i class="bi bi-trash"></i> Delete
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
