<p style="color: green"><%= notice %></p>

<% content_for :title, "People" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>People</h1>
  <% if current_person.can_manage_resources? %>
    <%= link_to new_person_path, class: "btn btn-primary" do %>
      <i class="bi bi-person-plus"></i> Create new person
    <% end %>
  <% end %>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead class="table-light">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Type</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @people.each do |person| %>
            <tr>
              <td><%= "#{person.firstname} #{person.lastname}" %></td>
              <td><%= person.email %></td>
              <td>
                <% badge_class = case person.type 
                   when 'Student' then 'bg-info'
                   when 'Teacher' then 'bg-warning'
                   when 'Dean' then 'bg-danger'
                   else 'bg-secondary'
                   end %>
                <span class="badge <%= badge_class %>"><%= person.type || 'Person' %></span>
              </td>
              <td>
                <div class="btn-group btn-group-sm">
                  <%= link_to person, class: "btn btn-outline-primary" do %>
                    <i class="bi bi-eye"></i> View
                  <% end %>
                  <% if current_person.can_manage_resources? %>
                    <%= link_to edit_person_path(person), class: "btn btn-outline-secondary" do %>
                      <i class="bi bi-pencil"></i> Edit
                    <% end %>
                    <%= button_to person, method: :delete, 
                        class: "btn btn-outline-danger", 
                        form: { data: { turbo_confirm: "Are you sure?" } } do %>
                      <i class="bi bi-trash"></i> Delete
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
