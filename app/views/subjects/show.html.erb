<% content_for :title, "Subject: #{@subject.name}" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Subject: <%= @subject.name %></h1>
  <div class="btn-group">
    <%= link_to edit_subject_path(@subject), class: "btn btn-outline-primary" do %>
      <i class="bi bi-pencil"></i> Edit
    <% end %>
    <%= link_to subjects_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left"></i> Back
    <% end %>
    <%= button_to @subject, method: :delete, 
        class: "btn btn-outline-danger", 
        form: { data: { turbo_confirm: "Are you sure you want to delete this subject?" } } do %>
      <i class="bi bi-trash"></i> Delete
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-light">
        <h5 class="card-title mb-0">Subject Information</h5>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-2">Name</dt>
          <dd class="col-sm-10"><%= @subject.name %></dd>
        </dl>
      </div>
    </div>
  </div>
</div>

<% if @subject.courses.any? %>
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
      <h5 class="card-title mb-0">Courses</h5>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Term</th>
              <th>Day</th>
              <th>Time</th>
              <th>Class</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @subject.courses.includes(:school_class).each do |course| %>
              <tr>
                <td><%= course.term %></td>
                <td>
                  <% days = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'] %>
                  <%= days[course.week_day - 1] if course.week_day.between?(1, 7) %>
                </td>
                <td><%= course.start_at&.strftime("%H:%M") %> - <%= course.end_at&.strftime("%H:%M") %></td>
                <td>
                  <% if course.school_class %>
                    <%= link_to "#{course.school_class.year}-#{course.school_class.name}", course.school_class %>
                  <% else %>
                    <span class="text-muted">None</span>
                  <% end %>
                </td>
                <td>
                  <%= link_to course, class: "btn btn-sm btn-outline-primary" do %>
                    <i class="bi bi-eye"></i> View
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% else %>
  <div class="card shadow-sm mb-4">
    <div class="card-body text-center py-5">
      <p class="text-muted mb-0">No courses are currently using this subject.</p>
    </div>
  </div>
<% end %>

<% if @subject.courses.any? && @subject.courses.flat_map(&:examinations).any? %>
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
      <h5 class="card-title mb-0">Examinations</h5>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Title</th>
              <th>Date</th>
              <th>Course</th>
              <th>Class</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @subject.courses.flat_map(&:examinations).each do |examination| %>
              <tr>
                <td><%= examination.title %></td>
                <td><%= examination.expected_date&.strftime("%d %b %Y") %></td>
                <td>
                  <% if examination.course %>
                    <%= link_to "Term #{examination.course.term}", examination.course %>
                  <% end %>
                </td>
                <td>
                  <% if examination.course&.school_class %>
                    <%= link_to "#{examination.course.school_class.year}-#{examination.course.school_class.name}", examination.course.school_class %>
                  <% end %>
                </td>
                <td>
                  <%= link_to examination, class: "btn btn-sm btn-outline-primary" do %>
                    <i class="bi bi-eye"></i> View
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
