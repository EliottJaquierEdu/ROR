<p style="color: green"><%= notice %></p>

<% content_for :title, "Subjects" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Subjects</h1>
  <%= link_to new_subject_path, class: "btn btn-primary" do %>
    <i class="bi bi-plus-circle"></i> New subject
  <% end %>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead class="table-light">
          <tr>
            <th>Name</th>
            <th>Courses</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @subjects.each do |subject| %>
            <tr>
              <td><%= subject.name %></td>
              <td>
                <% if subject.courses.any? %>
                  <span class="badge bg-info"><%= subject.courses.count %> courses</span>
                <% else %>
                  <span class="text-muted">No courses</span>
                <% end %>
              </td>
              <td>
                <div class="btn-group btn-group-sm">
                  <%= link_to subject, class: "btn btn-outline-primary" do %>
                    <i class="bi bi-eye"></i> View
                  <% end %>
                  <%= link_to edit_subject_path(subject), class: "btn btn-outline-secondary" do %>
                    <i class="bi bi-pencil"></i> Edit
                  <% end %>
                  <%= button_to subject, method: :delete, 
                      class: "btn btn-outline-danger", 
                      form: { data: { turbo_confirm: "Are you sure?" } } do %>
                    <i class="bi bi-trash"></i> Delete
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
