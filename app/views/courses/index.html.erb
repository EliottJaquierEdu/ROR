<% content_for :title, "Courses" %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Courses</h1>
    <div>
      <% if current_person.dean? %>
        <%= link_to "New Course", new_course_path, class: "btn btn-primary me-2" %>
        <%= link_to "Batch Create", batch_new_courses_path, class: "btn btn-success" %>
      <% end %>
    </div>
  </div>

  <% if current_person.dean? %>
    <% if params[:show_archived] %>
      <div class="alert alert-info">
        Showing archived courses. <%= link_to "Show active courses", courses_path, class: "alert-link" %>
      </div>
    <% else %>
      <div class="alert alert-info">
        Showing active courses. <%= link_to "Show archived courses", courses_path(show_archived: true), class: "alert-link" %>
      </div>
    <% end %>
  <% end %>

  <div class="card shadow-sm">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Subject</th>
              <th>Term</th>
              <th>Class</th>
              <th>Teacher</th>
              <th>Day</th>
              <th>Time</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @courses.each do |course| %>
              <tr>
                <td><%= course.subject&.name %></td>
                <td><%= course.term&.name %></td>
                <td><%= course.school_class&.name %></td>
                <td><%= course.teacher&.full_name %></td>
                <td><%= course.weekday_name %></td>
                <td><%= course.start_at.strftime("%H:%M") %> - <%= course.end_at.strftime("%H:%M") %></td>
                <td>
                  <div class="btn-group">
                    <%= link_to "View", course, class: "btn btn-sm btn-outline-primary" %>
                    <% if current_person.dean? %>
                      <%= link_to "Edit", edit_course_path(course), class: "btn btn-sm btn-outline-secondary" %>
                    <% end %>
                    <% if current_person.dean? %>
                      <%= button_to course.archived? ? "Unarchive" : "Archive", 
                          course.archived? ? unarchive_course_path(course) : archive_course_path(course),
                          method: :patch,
                          class: "btn btn-sm #{course.archived? ? 'btn-outline-success' : 'btn-outline-warning'}" %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="d-flex justify-content-center mt-4">
        <%= paginate @courses %>
      </div>
    </div>
  </div>
</div>
