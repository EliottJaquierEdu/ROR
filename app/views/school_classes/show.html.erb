<% content_for :title, "Class: #{@school_class.name}" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Class: <%= @school_class.year %>-<%= @school_class.name %></h1>
  <div class="btn-group">
    <%= link_to edit_school_class_path(@school_class), class: "btn btn-outline-primary" do %>
      <i class="bi bi-pencil"></i> Edit
    <% end %>
    <%= link_to school_classes_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left"></i> Back
    <% end %>
    <%= button_to @school_class, method: :delete, 
        class: "btn btn-outline-danger", 
        form: { data: { turbo_confirm: "Are you sure you want to delete this class?" } } do %>
      <i class="bi bi-trash"></i> Delete
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-light">
        <h5 class="card-title mb-0">Class Information</h5>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-4">Year</dt>
          <dd class="col-sm-8"><%= @school_class.year %></dd>
          
          <dt class="col-sm-4">Name</dt>
          <dd class="col-sm-8"><%= @school_class.name %></dd>
          
          <dt class="col-sm-4">Room</dt>
          <dd class="col-sm-8">
            <% if @school_class.room %>
              <%= link_to @school_class.room.name, @school_class.room %>
            <% else %>
              <span class="text-muted">None</span>
            <% end %>
          </dd>
        </dl>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-light">
        <h5 class="card-title mb-0">Master Teacher</h5>
      </div>
      <div class="card-body">
        <% if @school_class.master %>
          <div class="d-flex align-items-center mb-3">
            <div>
              <h5 class="mb-1"><%= @school_class.master.firstname %> <%= @school_class.master.lastname %></h5>
              <p class="text-muted mb-0"><%= @school_class.master.email %></p>
              <% if @school_class.master.teacher_status %>
                <p class="mb-0">Status: <%= @school_class.master.teacher_status.status %></p>
              <% end %>
            </div>
          </div>
          <div class="mt-2">
            <%= link_to @school_class.master, class: "btn btn-sm btn-outline-primary" do %>
              <i class="bi bi-eye"></i> View Teacher
            <% end %>
          </div>
        <% else %>
          <p class="text-muted">No master teacher assigned to this class.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if @school_class.students.any? %>
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
      <h5 class="card-title mb-0">Students</h5>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @school_class.students.each do |student| %>
              <tr>
                <td><%= "#{student.firstname} #{student.lastname}" %></td>
                <td><%= student.email %></td>
                <td>
                  <% if student.student_status %>
                    <%= student.student_status.status %>
                  <% end %>
                </td>
                <td>
                  <%= link_to student, class: "btn btn-sm btn-outline-primary" do %>
                    <i class="bi bi-eye"></i> View
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% else %>
  <div class="card shadow-sm mb-4">
    <div class="card-body text-center py-5">
      <p class="text-muted mb-0">No students are currently assigned to this class.</p>
    </div>
  </div>
<% end %>

<% if @school_class.courses.any? %>
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
      <h5 class="card-title mb-0">Courses</h5>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Subject</th>
              <th>Term</th>
              <th>Day</th>
              <th>Time</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @school_class.courses.includes(:subject).each do |course| %>
              <tr>
                <td>
                  <% if course.subject %>
                    <%= course.subject.name %>
                  <% else %>
                    <span class="text-muted">None</span>
                  <% end %>
                </td>
                <td><%= course.term %></td>
                <td>
                  <% days = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'] %>
                  <%= days[course.week_day - 1] if course.week_day.between?(1, 7) %>
                </td>
                <td><%= course.start_at&.strftime("%H:%M") %> - <%= course.end_at&.strftime("%H:%M") %></td>
                <td>
                  <%= link_to course, class: "btn btn-sm btn-outline-primary" do %>
                    <i class="bi bi-eye"></i> View
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% else %>
  <div class="card shadow-sm mb-4">
    <div class="card-body text-center py-5">
      <p class="text-muted mb-0">No courses are currently assigned to this class.</p>
    </div>
  </div>
<% end %>
