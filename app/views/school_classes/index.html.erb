<p style="color: green"><%= notice %></p>

<% content_for :title, "School Classes" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>School Classes</h1>
  <%= link_to new_school_class_path, class: "btn btn-primary" do %>
    <i class="bi bi-plus-circle"></i> New class
  <% end %>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead class="table-light">
          <tr>
            <th>Year</th>
            <th>Name</th>
            <th>Room</th>
            <th>Master Teacher</th>
            <th>Students</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @school_classes.each do |school_class| %>
            <tr>
              <td><%= school_class.year %></td>
              <td><%= school_class.name %></td>
              <td>
                <% if school_class.room %>
                  <%= link_to school_class.room.name, school_class.room %>
                <% else %>
                  <span class="text-muted">None</span>
                <% end %>
              </td>
              <td>
                <% if school_class.master %>
                  <%= link_to "#{school_class.master.firstname} #{school_class.master.lastname}", school_class.master %>
                <% else %>
                  <span class="text-muted">None</span>
                <% end %>
              </td>
              <td>
                <% if school_class.students.any? %>
                  <span class="badge bg-info"><%= school_class.students.count %> students</span>
                <% else %>
                  <span class="text-muted">No students</span>
                <% end %>
              </td>
              <td>
                <div class="btn-group btn-group-sm">
                  <%= link_to school_class, class: "btn btn-outline-primary" do %>
                    <i class="bi bi-eye"></i> View
                  <% end %>
                  <%= link_to edit_school_class_path(school_class), class: "btn btn-outline-secondary" do %>
                    <i class="bi bi-pencil"></i> Edit
                  <% end %>
                  <%= button_to school_class, method: :delete, 
                      class: "btn btn-outline-danger", 
                      form: { data: { turbo_confirm: "Are you sure?" } } do %>
                    <i class="bi bi-trash"></i> Delete
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
