<% content_for :title, "Editing Class" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Editing Class</h1>
  <div class="btn-group">
    <% if can_view_school_class?(@school_class) %>
      <%= link_to @school_class, class: "btn btn-outline-primary" do %>
        <i class="bi bi-eye"></i> View
      <% end %>
    <% end %>
    
    <%= link_to school_classes_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left"></i> Back
    <% end %>
  </div>
</div>

<div class="card shadow-sm mb-4">
  <div class="card-body">
    <%= render "form", school_class: @school_class %>
  </div>
</div>
