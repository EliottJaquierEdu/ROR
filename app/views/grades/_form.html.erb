<%= form_with(model: grade) do |form| %>
  <% if grade.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(grade.errors.count, "error") %> prohibited this grade from being saved:</h2>

      <ul>
        <% grade.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :value, style: "display: block" %>
    <%= form.text_field :value %>
  </div>

  <div>
    <%= form.label :effective_date, style: "display: block" %>
    <%= form.datetime_field :effective_date %>
  </div>

  <div>
    <%= form.label :person_id, "Student", style: "display: block" %>
    <%= form.collection_select :person_id, Student.all, :id, :full_name %>
  </div>

  <div>
    <%= form.label :examination_id, style: "display: block" %>
    <%= form.collection_select :examination_id, Examination.all, :id, :title %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
