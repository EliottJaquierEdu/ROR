<%= form_with(model: room, class: "needs-validation") do |form| %>
  <% if room.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h5>
      <ul class="mb-0">
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
      <h5 class="card-title mb-0">Room Information</h5>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-12">
          <div class="form-floating mb-3">
            <%= form.text_field :name, class: "form-control", placeholder: "Name" %>
            <%= form.label :name %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", rooms_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
