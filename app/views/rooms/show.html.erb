<% content_for :title, "Room: #{@room.name}" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Room: <%= @room.name %></h1>
  <div class="btn-group">
    <%= link_to edit_room_path(@room), class: "btn btn-outline-primary" do %>
      <i class="bi bi-pencil"></i> Edit
    <% end %>
    <%= link_to rooms_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left"></i> Back
    <% end %>
    <%= button_to @room, method: :delete, 
        class: "btn btn-outline-danger", 
        form: { data: { turbo_confirm: "Are you sure you want to delete this room?" } } do %>
      <i class="bi bi-trash"></i> Delete
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-light">
        <h5 class="card-title mb-0">Room Information</h5>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-2">Name</dt>
          <dd class="col-sm-10"><%= @room.name %></dd>
        </dl>
      </div>
    </div>
  </div>
</div>

<% if @room.school_classes.any? %>
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
      <h5 class="card-title mb-0">Classes in this Room</h5>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Year</th>
              <th>Name</th>
              <th>Master Teacher</th>
              <th>Students</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @room.school_classes.each do |school_class| %>
              <tr>
                <td><%= school_class.year %></td>
                <td><%= school_class.name %></td>
                <td>
                  <% if school_class.master %>
                    <%= link_to "#{school_class.master.firstname} #{school_class.master.lastname}", school_class.master %>
                  <% else %>
                    <span class="text-muted">None</span>
                  <% end %>
                </td>
                <td>
                  <% if school_class.students.any? %>
                    <span class="badge bg-info"><%= school_class.students.count %> students</span>
                  <% else %>
                    <span class="text-muted">No students</span>
                  <% end %>
                </td>
                <td>
                  <%= link_to school_class, class: "btn btn-sm btn-outline-primary" do %>
                    <i class="bi bi-eye"></i> View
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% else %>
  <div class="card shadow-sm mb-4">
    <div class="card-body text-center py-5">
      <p class="text-muted mb-0">No classes are currently assigned to this room.</p>
    </div>
  </div>
<% end %>
