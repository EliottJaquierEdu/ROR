<% content_for :title, "Address Details" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Address Details</h1>
  <%= render 'shared/show_actions',
             resource: @address,
             resource_name: 'address',
             index_path: addresses_path %>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-light">
        <h5 class="card-title mb-0">Address Information</h5>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-4">Street</dt>
          <dd class="col-sm-8"><%= @address.street %></dd>
          
          <dt class="col-sm-4">Number</dt>
          <dd class="col-sm-8"><%= @address.number %></dd>
          
          <dt class="col-sm-4">ZIP Code</dt>
          <dd class="col-sm-8"><%= @address.zip %></dd>
          
          <dt class="col-sm-4">Town</dt>
          <dd class="col-sm-8"><%= @address.town %></dd>
        </dl>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-light">
        <h5 class="card-title mb-0">Associated Person</h5>
      </div>
      <div class="card-body">
        <% if @address.person %>
          <div class="d-flex align-items-center mb-3">
            <div class="ms-3">
              <h5 class="mb-1"><%= @address.person.firstname %> <%= @address.person.lastname %></h5>
              <p class="text-muted mb-0"><%= @address.person.email %></p>
              <% if @address.person.type %>
                <span class="badge <%= @address.person.type == 'Student' ? 'bg-info' : 'bg-warning' %>">
                  <%= @address.person.type %>
                </span>
              <% end %>
            </div>
          </div>
          <div class="mt-3">
            <%= link_to @address.person, class: "btn btn-sm btn-outline-primary" do %>
              <i class="bi bi-eye"></i> View Person
            <% end %>
          </div>
        <% else %>
          <p class="text-muted">No person associated with this address.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
