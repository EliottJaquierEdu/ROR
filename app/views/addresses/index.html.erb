<p style="color: green"><%= notice %></p>

<% content_for :title, "Addresses" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Addresses</h1>
  <%= link_to new_address_path, class: "btn btn-primary" do %>
    <i class="bi bi-plus-circle"></i> New address
  <% end %>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead class="table-light">
          <tr>
            <th>Street</th>
            <th>Number</th>
            <th>ZIP</th>
            <th>Town</th>
            <th>Person</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.street %></td>
              <td><%= address.number %></td>
              <td><%= address.zip %></td>
              <td><%= address.town %></td>
              <td>
                <% if address.person %>
                  <%= link_to "#{address.person.firstname} #{address.person.lastname}", address.person %>
                <% else %>
                  <span class="text-muted">None</span>
                <% end %>
              </td>
              <td>
                <div class="btn-group btn-group-sm">
                  <%= link_to address, class: "btn btn-outline-primary" do %>
                    <i class="bi bi-eye"></i> View
                  <% end %>
                  <%= link_to edit_address_path(address), class: "btn btn-outline-secondary" do %>
                    <i class="bi bi-pencil"></i> Edit
                  <% end %>
                  <%= button_to address, method: :delete, 
                      class: "btn btn-outline-danger", 
                      form: { data: { turbo_confirm: "Are you sure?" } } do %>
                    <i class="bi bi-trash"></i> Delete
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
